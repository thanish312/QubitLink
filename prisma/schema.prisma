generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// The Human (Discord Account)
model User {
  discordId     String    @id @unique
  username      String?
  discriminator String?
  avatar        String?
  createdAt     DateTime  @default(now())

  // A user can own multiple wallets
  wallets       Wallet[]
}

// The Asset (Qubic Wallet)
model Wallet {
  address       String   @id @unique // A wallet can only belong to ONE user (Security)
  isVerified    Boolean  @default(false)
  verifiedAt    DateTime?
  createdAt     DateTime @default(now())
  
  // Link back to the human
  userId        String
  user          User     @relation(fields: [userId], references: [discordId], onDelete: Cascade)
}

// Temporary Handshakes
model Challenge {
  id            String   @id @default(cuid())
  discordId     String
  walletAddress String
  signalCode    Int
  expiresAt     DateTime
  createdAt     DateTime @default(now())

  @@index([discordId])
  @@index([walletAddress])
}

model ProcessedTransaction {
  txId      String   @id @unique // The Qubic Transaction ID
  createdAt DateTime @default(now())
}

model RoleThreshold {
  id          String   @id @default(cuid())
  roleId      String   @unique
  roleName    String
  threshold   BigInt   @default(0)
  createdAt   DateTime @default(now())
}

model Portfolio {
  userId         String   @id @unique
  totalBalance   BigInt   @default(0)
  updatedAt      DateTime @updatedAt
}